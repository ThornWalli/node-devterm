{
  "name": "devterm",
  "version": "1.0.0-beta.15",
  "description": "Useful package when using a DevTerm.",
  "license": "MIT",
  "author": "Thorn-Welf Walli <lammpee@gmail.com> (https://lammpee.de)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThornWalli/node-devterm"
  },
  "type": "module",
  "main": "./build/esm/index.js",
  "exports": {
    ".": {
      "require": "./build/cjs/index.cjs",
      "default": "./build/esm/index.js"
    },
    "./config": {
      "require": "./build/cjs/config.cjs",
      "default": "./build/esm/config.js"
    },
    "./classes/Printer": {
      "require": "./build/cjs/classes/Printer.cjs",
      "default": "./build/esm/classes/Printer.js"
    },
    "./classes/Table": {
      "require": "./build/cjs/classes/Table.cjs",
      "default": "./build/esm/classes/Table.js"
    },
    "./utils/buffer": {
      "require": "./build/cjs/utils/buffer.cjs",
      "default": "./build/esm/utils/buffer.js"
    },
    "./utils/canvas": {
      "require": "./build/cjs/utils/canvas.cjs",
      "default": "./build/esm/utils/canvas.js"
    },
    "./utils/devterm": {
      "require": "./build/cjs/utils/devterm.cjs",
      "default": "./build/esm/utils/devterm.js"
    },
    "./utils/image": {
      "require": "./build/cjs/utils/image.cjs",
      "default": "./build/esm/utils/image.js"
    },
    "./utils/string": {
      "require": "./build/cjs/utils/string.cjs",
      "default": "./build/esm/utils/string.js"
    },
    "./utils/stuff": {
      "require": "./build/cjs/utils/stuff.cjs",
      "default": "./build/esm/utils/stuff.js"
    },
    "./utils/printer": {
      "require": "./build/cjs/utils/printer.cjs",
      "default": "./build/esm/utils/printer.js"
    },
    "./charFonts/3x5": {
      "require": "./build/cjs/charFonts/3x5.cjs",
      "default": "./build/esm/charFonts/3x5.js"
    }
  },
  "module": "./build/esm/index.js",
  "directories": {
    "build": "build"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "build": "node ./build.js",
    "lint:es": "eslint --ext .js .",
    "test": "npm run lint:es"
  },
  "dependencies": {
    "canvas": "^2.8.0",
    "floyd-steinberg": "^1.0.6",
    "jsbarcode": "^3.11.5",
    "qrcode": "^1.5.0",
    "serialport": "^9.2.8"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "commitlint": "16.2.1",
    "esbuild": "0.14.21",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "pinst": "2.1.6"
  }
}
